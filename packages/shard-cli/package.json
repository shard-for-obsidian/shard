{
  "name": "shard-cli",
  "version": "0.1.0",
  "description": "Shard CLI tool to push and pull plugins from GHCR",
  "type": "module",
  "bin": {
    "shard": "./dist/index.js"
  },
  "scripts": {
    "build": "node esbuild.config.mjs",
    "build:prod": "node esbuild.config.mjs production",
    "clean": "rimraf dist",
    "ts-check": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "shard",
    "plugin",
    "ghcr",
    "oci",
    "registry",
    "cli"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "shard-lib": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@vitest/ui": "^4.0.18",
    "vitest": "^4.0.18"
  }
}
