{
  "name": "shard-installer",
  "description": "Browse and install Obsidian plugins from GitHub Container Registry repositories",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "node esbuild.config.mjs production",
    "clean": "rimraf dist",
    "ts-check": "tsc --noEmit",
    "lint": "eslint .",
    "push": "shard push ./dist ghcr.io/gillisandrew/shard/shard-installer-plugin",
    "generate-manifest": "node manifest.config.mjs > manifest.json"
  },
  "dependencies": {
    "shard-lib": "workspace:*",
    "obsidian": "^1.11.4"
  },
  "devDependencies": {
    "shard-cli": "workspace:*"
  },
  "keywords": [
    "shard",
    "installer",
    "ghcr"
  ],
  "license": "MIT"
}
