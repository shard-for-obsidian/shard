{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "..",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["ESNext", "DOM"],
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "allowImportingTsExtensions": false,
    "noEmit": false
  },
  "include": [
    "**/*.ts",
    "../lib/client/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
